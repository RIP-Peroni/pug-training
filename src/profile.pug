include pug/en

-
    const user = {
        name: 'Кодовёнок',
        surname: 'Хекслетович',
        role: 'user',
    };

doctype html
html(lang=i18n.locale)
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title= i18n.profile['Student Profile']
    body
        section.profile-links
            h1 #{user.name} #{user.surname}
            nav
                a(href="#")= i18n.profile['Settings']
                .divider
                a(href="#")= i18n.profile['Promo Code']
                a(href="#")= i18n.profile['Access as a gift']

                if user.role !== 'user'
                    .divider
                    a(href="#")= i18n.profile["Teacher's"]
                    a(href="#")= i18n.profile['Mentoring']
                    a(href="#")= i18n.profile['Marketing']

                .divider
                a(href="#")= i18n.profile['Help']
                button= i18n.profile['Log off']
