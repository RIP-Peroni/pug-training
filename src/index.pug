mixin article(name = 'Hexlet', author = 'Кодовёнок')
    .post
        h2= name

        .post-body
            if block
                block
            else
                p Контента нет!

        .post-author= author

doctype html
html(lang='ru')
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title Hexlet Profile
    body
        +article('Название статьи', 'Автор статьи')
            include:markdown-it article_content.md
