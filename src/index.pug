-
    const title = 'Количество курсов на Хесклете';
    const javascript = 32;
    const php = 24;
    const python = 14;
    const layout = 12;

doctype html
html(lang='ru')
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title Курсы на Хекслет
    body
        h1 #{title}
        table
            thead
                tr
                    th Курс
                    th Количество уроков
            tbody
                tr
                    td JavaScript
                    td #{javascript}
                tr
                    td PHP
                    td #{php}
                tr
                    td Python
                    td #{python}
                tr
                    td Вёрстка
                    td #{layout}
        p Всего курсов: #{javascript + php + python + layout}
