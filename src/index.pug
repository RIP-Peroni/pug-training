-
    const users = [
        {
            name: 'Кодовёнок',
            surname: 'Хекслетович',
            login: 'hexlet-code',
            scores: 1271,
        },
        {
            name: 'Король',
            surname: 'Вёрстки',
            login: 'king-of-layout',
            scores: 1100,
        }
    ];

doctype html
html(lang='ru')
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title Hexlet Profile
    body
        section.container
            h2 Рейтинг пользователей

            table
                thead
                    tr
                        th Имя
                        th Фамилия
                        th Логин
                        th Баллы
                tbody
                    each user in users
                        tr
                            td= user.name
                            td= user.surname
                            td= user.login
                            td= user.scores
                    else
                        tr
                            td(colspan='4') Нет пользователей
